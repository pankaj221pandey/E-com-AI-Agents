# .env

# LLM Settings
LLM_PROVIDER=openai
LLM_MODEL_NAME=gpt-3.5-turbo
OPENAI_API_KEY="Enter API KEY"

# Data Paths
PRODUCT_CATALOG_PATH=data/product_catalog.csv
ORDERS_PATH=data/orders.csv
KNOWLEDGE_BASE_PATH=data/knowledge_base.json

# Cache Settings
CACHE_TTL=3600
USE_CACHE=True

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# RAG Settings
RAG_SIMILARITY_THRESHOLD=0.5
RAG_MODEL_NAME=all-MiniLM-L6-v2

# Router Settings
ROUTER_KEYWORD_MATCHING_ENABLED=True
ROUTER_INTENT_CONFIDENCE_THRESHOLD=0.6

# Async Processing
USE_ASYNC=False
ENABLE_OPENAI=True
